<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../../partials/head'); %>
</head>
<body class="container">

<header>
  <%- include('../../partials/header'); %>
</header>

<main>
    <form method="POST" action="/admin/subcategory/<%= req.params.id %>?_method=PUT">
      <div class="col-md-3 mb-3">
        <select class="form-control" aria-label="Default select Category" name="category" required>
          <% categories.forEach(function(category) { %>
            <option value="<%= category.id%>" <% if(category.id===result.parent) { %> selected <% }%> ><%= category.name %></option>
          <% }); %>
        </select>

      </div>
        <div class="col-md-3 mb-3">
            <label for="name" class="form-label">Category Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              required
              name="name"
            value="<%= result.name %>"
            />
          </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</main>

<footer>
  <%- include('../../partials/footer'); %>
</footer>

</body>
</html>